{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["ESNext"],
    "types": ["node", "jest"]
  },
  "include": [
    "src/types.ts",
    "src/ai", 
    "src/core",
    "src/plugins",
    "src/server",
    "src/master",
    "src/testing"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/client",
    "src/lobby",
    "src/multiplayer",
    "src/react",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts"
  ]
}
