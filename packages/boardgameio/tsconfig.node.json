{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["ESNext"],
    "types": ["node", "jest"]
  },
  "include": [
    "src/core",
    "src/node"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/browser",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts"
  ]
}
