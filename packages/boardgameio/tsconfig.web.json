{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "lib": ["ESNext", "DOM"],
    "types": ["react", "react-dom"],
    "jsx": "react-jsx"
  },
  "include": [
    "src/core",
    "src/browser"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/node",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts"
  ]
}
