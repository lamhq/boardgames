{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "lib": ["ESNext", "DOM"],
    "types": ["react", "react-dom"],
    "jsx": "react-jsx"
  },
  "include": [
    "src/client",
    "src/lobby",
    "src/multiplayer",
    "src/react"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/ai", 
    "src/core",
    "src/plugins",
    "src/aws",
    "src/server",
    "src/master",
    "src/testing",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts"
  ]
}
